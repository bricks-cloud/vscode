{
  "name": "d2c-vscode",
  "publisher": "bricks",
  "displayName": "d2c-vscode",
  "description": "Design to code tool",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:bricksDesignToCode.openFile",
    "onCommand:bricksDesignToCode.handleUri"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "bricksDesignToCode",
          "title": "Bricks Design To Code",
          "icon": "src/asset/bricks-logo.png"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "bricksWorkspace",
          "name": "Bricks Workspace"
        }
      ]
    },
    "commands": [
      {
        "command": "bricksDesignToCode.openFile",
        "title": "Open File"
      },
      {
        "command": "bricksDesignToCode.handleUri",
        "title": "Start handling Uris"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/mkdirp": "^0.5.2",
    "@types/rimraf": "^2.0.2",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "mkdirp": "^0.5.1",
    "rimraf": "^2.6.2"
  }
}
