{
  "name": "d2c-vscode",
  "publisher": "bricks",
  "displayName": "d2c-vscode",
  "description": "Design to code tool",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "bricksWorkspace",
          "name": "Bricks Workspace"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "bricksDesignToCode.refreshEntry",
          "when": "view == nodeDependencies",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "bricksDesignToCode.openFile",
        "title": "Open File"
      },
      {
        "command": "bricksDesignToCode.openWebview",
        "title": "Open Webview",
        "category": "Bricks"
      },
      {
        "command": "bricksDesignToCode.handleUri",
        "title": "Start handling Uris"
      },
      {
        "command": "preview.show",
        "title": "Show preview of currently opened file"
      },
      {
        "command": "bricksDesignToCode.refreshEntry",
        "title": "Refresh"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run compile:view && yarn run compile:extension",
    "compile:extension": "tsc --outDir out",
    "compile:view": "webpack",
    "watch": "yarn run watch:view && yarn run watch:extension",
    "watch:extension": "tsc --watch --outDir out",
    "watch:view": "webpack --watch",
    "watch-tests": "tsc -w --outDir out",
    "package": "webpack --mode production --devtool hidden-source-map",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^18.11.19",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/rimraf": "^2.0.2",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "esbuild-wasm": "^0.17.8",
    "express": "^4.18.2",
    "mkdirp": "^0.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^2.6.2",
    "socket.io": "^4.5.4"
  }
}
